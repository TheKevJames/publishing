\newtheorem{definition}{Definition}[section]
\newtheorem{example}{Example}[section]
\newtheorem*{note}{Note}

% Functions
\newcommand{\function}{\ensuremath{\rightarrow}}
	% surjective: onto -> each y is mapped to
\newcommand{\surjective}{\ensuremath{\twoheadrightarrow}}
