\newcommand{\injective}{\ensuremath{\rightarrowtail}}
\newcommand{\bijective}{\ensuremath{\injective\!\!\!\!\!\surjective}}
\newcommand{\nontotal}{\ensuremath{-\!\!\!\mapsto}}
\newcommand{\nontotalsurjective}{\ensuremath{-\!\!\!\mapsto\!\!\!\!\!\!\surjective}}
\newcommand{\nontotalinjective}{\ensuremath{\injective\!\!\!\!\shortmid}}
\newcommand{\nontotalbijective}{\ensuremath{\bijective\!\!\!\!\shortmid}}

