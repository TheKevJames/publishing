% Derivatives
\newcommand{\dd}{\ {\rm d}}
\newcommand{\deriv}[2]{\ensuremath{\frac{{\rm d} #1}{{\rm d} #2}}}
\newcommand{\dderiv}[2]{\ensuremath{\frac{{\rm d}^2 #1}{{\rm d} #2^2}}}
\newcommand{\nderiv}[3]{\ensuremath{\frac{{\rm d}^{#3} #1}{{\rm d} #2^{#3}}}}
\newcommand{\limit}[2]{\ensuremath{\Bigg|_{#1}^{#2}}}

% Environments
\newtheorem{theorem}{Theorem}[section]
